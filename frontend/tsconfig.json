{
  "compilerOptions": {
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client", "@testing-library/jest-dom", "unplugin-icons/types/solid"],
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "target": "ESNext",
    "skipLibCheck": true,
    "verbatimModuleSyntax": false
  },
  "exclude": ["node_modules", "*dist", "/test-results/", "/playwright-report/", "/blob-report/", "/playwright/.cache/"]
}
